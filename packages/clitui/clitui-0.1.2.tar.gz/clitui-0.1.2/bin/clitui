#!/user/bin/env python
from sys import argv

first = argv[1]


def matrix():
    from clitui.matrix_rain import Screen, safe_run

    screen = Screen(fullscreen=True, amount="half")
    safe_run(screen.render)


def menu():
    from clitui.example_menu import test

    test()


def arg_switch(k):
    return {"matrix": matrix, "menu": menu}.get(
        k, lambda: print(f"'{k}' is not a option")
    )


program = arg_switch(first)
program()
