TEMPLATE_wide_charter_default:
  - charter_interior_box
  - rotate
  - outside_box
  - title_box
  - token_embed
  - label_text
  - top_note_text
  - comment_text
  - long_name_text
  - token_1_circle
  - token_2_circle
  - token_3_circle
  - token_4_circle
  - token_5_circle
  - token_6_circle
  - token_7_circle
  - token_8_circle
  - token_9_circle
  - token_1_text
  - token_2_text
  - token_3_text
  - token_4_text
  - token_5_text
  - token_6_text
  - token_7_text
