outside_box:
  x_inset: 10
  y_inset: 10
  x: $[${wide_charter_interior_box/y} - (2 * ${outside_box/y_inset})]
  y: $[${wide_charter_interior_box/x} - (2 * ${outside_box/x_inset})]
  radius: 30
  stroke: ${colour/xxp/BLACK}
  width: 4
  fill: $[desaturate_and_brighten (${_/_related_fill}, 0.04, 0.95)]

title_box:
  x_inset: ${outside_box/x_inset}
  y_inset: $[${outside_box/y} - 60 + 10]
  x: ${outside_box/x}
  y: 60
  radius: 30
  stroke: ${colour/xxp/BLACK}
  width: 4
  fill: ${_/_related_fill}

token_embed:
  typ: token
  x_inset: 18
  y_inset: 200

label_text:
  typeface: ${DEFAULT/typeface_italic}
  size: 13
  x_inset: 10
  y_inset: 170
  text: Assets, Treasury & Trains
  x: $[${outside_box/x} / 2]
  y: 0
  h_center: 0
  v_center: 0
  fill: $[black_or_white (${outside_box/fill})]

top_note_text:
  suppress: True
  typeface: ${DEFAULT/typeface}
  size: 8
  x: $[${outside_box/x} / 2]
  y: 0
  x_inset: 10
  y_inset: 150
  h_center: 0
  v_center: 0
  fill: $[black_or_white (${outside_box/fill})]

comment_text:
  suppress: False
  text: ""
  typeface: ${DEFAULT/typeface_italic}
  size: 8
  x_inset: 10
  y_inset: 20
  x: $[${outside_box/x} / 2]
  y: 0
  h_center: 0
  v_center: -1
  fill: $[black_or_white (${outside_box/fill})]

long_name_text:
  h_center: 0
  v_center: 0
  size: 16
  x: $[(${token_embed/x_inset} * 2) + (${outside_box/x} - ${token_embed/x_inset}) / 2]
  y: 215
  fill: $[black_or_white (${_/_related_fill})]

token_1_circle:
  suppress: $["${token_1_text/text}" == ""]
  x: 42
  y: 160
  radius: 18
  width: 0.5
  stroke: ${colour/xxp/BLACK}
  fill:  ${colour/xxp/WHITE}

