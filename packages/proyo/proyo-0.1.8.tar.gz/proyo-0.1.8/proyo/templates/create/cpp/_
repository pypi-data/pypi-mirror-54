# ~~~

from os import chdir, mkdir

build_system = ...

if build_system == 'meson':
    # !meson build
    chdir('build')
    # !ninja
elif build_system == 'cmake':
    mkdir('build')
    chdir('build')
    # !cmake ..
    # !make
